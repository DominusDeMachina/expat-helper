# Environment Configuration
NODE_ENV=development

# App Configuration
APP_NAME=Expat Food Finder
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=https://api.expatfood.com
API_TIMEOUT=10000

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Food Data APIs
SPOONACULAR_API_KEY=your_spoonacular_api_key_here
EDAMAM_APP_ID=your_edamam_app_id_here
EDAMAM_APP_KEY=your_edamam_app_key_here

# Location Services
GEOLOCATION_TIMEOUT=15000
GEOLOCATION_MAX_AGE=300000

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Error Reporting (optional)
SENTRY_DSN=your_sentry_dsn_here

# Database (if using a backend)
DATABASE_URL=your_database_url_here

# Authentication (if implementing user accounts)
JWT_SECRET=your_jwt_secret_here
OAUTH_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
OAUTH_FACEBOOK_APP_ID=your_facebook_app_id_here

# Push Notifications (Expo)
EXPO_PUSH_TOKEN=your_expo_push_token_here

# Development/Debug
DEBUG_MODE=true
LOG_LEVEL=debug

# Staging Environment
STAGING_API_BASE_URL=https://staging-api.expatfood.com

# Production Environment
PRODUCTION_API_BASE_URL=https://api.expatfood.com 